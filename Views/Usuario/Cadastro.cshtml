@model EmporioIrmasDaTerra.Models.Usuario

@{
    ViewData["Title"] = "Cadastro";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-5">
            <div class="card shadow-sm custom-card-auth">
                <div class="card-body p-4 p-md-5">
                    <h2 class="card-title text-center mb-4">Crie Sua Conta</h2>
                    
                    <form asp-controller="Usuario" asp-action="Cadastro" method="post">
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" required />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Cpf" class="form-label"></label>
                            <input asp-for="Cpf" class="form-control" required />
                            <span asp-validation-for="Cpf" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefone" class="form-label"></label>
                            <input asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" type="email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Senha" class="form-label"></label>
                            <input asp-for="Senha" type="password" class="form-control" required />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-auth-submit">Cadastrar</button>
                        </div>
                        
                        <p class="text-center mt-3 mb-0">
                            Já tem conta? <a asp-controller="Usuario" asp-action="Login" class="link-auth-action">Faça Login</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}