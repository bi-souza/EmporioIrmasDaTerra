@model IEnumerable<EmporioIrmasDaTerra.Models.Produto>

@{
    ViewData["Title"] = "Nossos Produtos";
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo ao Empório Irmãs da Terra</h1>
    <p>Conheça nossos produtos naturais</p>
</div>

<div class="container mt-4">
    <div class="row">
        
        @if (Model.Any())
        {
            @foreach (var produto in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@produto.NomeProduto</h5>
                            
                            <h6 class="card-subtitle mb-2 text-muted">
                                Categoria: @produto.Categoria.NomeCategoria
                            </h6>
                            
                            <p class="card-text">@produto.Descricao</p>
                            
                            <h4 class="card-text text-success">
                                R$ @produto.Preco.ToString("F2")
                            </h4>
                            
                            <p class="card-text">
                                <small>Estoque: @produto.Estoque unidades</small>
                            </p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning" role="alert">
                    Ainda não há produtos cadastrados. Verifique se o código de *seeding* (carga inicial) está correto no `Program.cs`.
                </div>
            </div>
        }
    </div>
</div>